<div class="container page-content">
  <div class="row">
    <div class="col-sm">
      <div class="card raised">
        <div class="card-avatar">
        </div>
        <h3 class="card-title">
          Details
        </h3>
        <small class="card-subtitle text-muted">
          Lorem ipsum dolor sit amet, consectetur
        </small>
        <p class="card-text">
          <div class="row">
            <div class="col-sm-4 divider-right"> 
              <%= @company.name || 'Not Specified'%>
            </div>
            <div class="col-sm-4 divider-right">
              <a href="<%= @company.cname %>" target="_blank"><%= @company.cname || 'Not Specified'%></a>
            </div>
            <div class="col-sm-4">
              <%= @company.created_at.strftime("%d/%m/%Y") %>
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <div class="card raised">
        <h3 class="card-title">Members</h3>
        <small class="card-subtitle text-muted">
          Morbi mollis, ante in placerat fringilla
        </small>
        <div class="card-text">
          <br>
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Confirmed</th>
                <th scope="col">Joined</th>
                <th scope="col">Role</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each_with_index do |user, i|%>
                <tr>
                  <th scope="row"><%= i+1 %></th>
                  <td><%= user.full_name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.confirmed? %></td>
                  <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
                  <td><span class="badge badge-pill badge-primary">Member</span></td>
                </tr>
              <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>