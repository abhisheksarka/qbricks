<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'sign-up-form' }) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Company Email' %>
  </div>
  <div class="form-group">
    <%= f.text_field :full_name, class: 'form-control', placeholder: 'Full Name' %>
  </div>
  <div class="form-group">
    <%= f.number_field :phone_number, class: 'form-control', placeholder: 'Phone Number' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
  </div>
  <%= f.button "Sign up", class: 'btn btn-primary btn-lg', type: 'submit' %>
  <br><br>
  <small class="text-muted">
    By signing up, you agree to our <a href="#">terms and conditions</a>
    <br>
    Already have an account? <a href="/sign_in">Sign in</a>
  </small>
<% end %>
